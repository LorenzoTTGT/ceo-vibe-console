{
  "name": "ceo-vibe-console",
  "version": "0.1.0",
  "private": true,
  "main": "electron-app/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently \"wait-on http://localhost:3000 && electron .\" \"next dev\"",
    "electron:build": "next build && electron-builder --config electron-builder.yml",
    "electron:build:mac": "next build && electron-builder --mac --config electron-builder.yml",
    "electron:build:win": "next build && electron-builder --win --config electron-builder.yml",
    "electron:build:linux": "next build && electron-builder --linux --config electron-builder.yml",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@auth/core": "^0.34.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "better-sqlite3": "^12.6.2",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "electron-updater": "^6.0.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.4",
    "next-auth": "^4.24.13",
    "octokit": "^5.0.5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.31.8",
    "electron": "^33.4.11",
    "electron-builder": "^25.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.0"
  }
}
